{
    "name": "Language Companion",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A comprehensive language learning and reference tool.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "icons": {
      "128": "logo.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  